# Production Environment Variables for Render.com
# Bu qiymatlar Render.com dashboard'da Environment Variables bo'limida o'rnatiladi

NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=render_avtomatik_generatsiya_qiladi
JWT_EXPIRES_IN=24h

# CORS - Frontend URL
ALLOWED_ORIGINS=https://play-kids.onrender.com

# Telegram Bot (Render dashboard'da o'rnating)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Data Directory (Render disk mount)
DATA_DIR=/opt/render/project/src/backend/data
